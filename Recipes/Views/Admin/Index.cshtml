<script>
    const ctx = document.getElementById('myChart');
    var x=@Json.Serialize(Model.Item1)
    var y = @Json.Serialize(Model.Item2)
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: x,
            datasets: [{
                label: '# of Votes',
                data: y,
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>

