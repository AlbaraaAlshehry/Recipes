            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link " href="@Url.Action("Index", "Home")#Home">Home</a></li>
                    <li> <a class="nav-link" href="@Url.Action("Index", "Home")#About">About</a></li>
                    
                    <li><a class="nav-link" href="@Url.Action("Index", "Home")#Categroy">Category</a></li>
                    @if (HttpContextAccessor.HttpContext.Session.GetInt32("CustomerId") != null)
                    {
                        <li><a class="nav-link a class="nav-link" href="@Url.Action("Index", "Home")#Testimonial">Tetimonial</a></li>
                    }

                    <li><a class="nav-link" href="@Url.Action("Index", "Home")#Chefs">Chefs</a></li>
                    <li><a class="nav-link" href="@Url.Action("Index", "Home")#Contact">Contact</a></li>
                   
                    @if (HttpContextAccessor.HttpContext.Session.GetInt32("ChefId") != null)
                    {
                        <li><a class="nav-link scrollto" asp-controller="Home" asp-action="ChefRecipe">My Recipes</a></li>
                    }
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
            @if (HttpContextAccessor.HttpContext.Session.GetInt32("CustomerId") == null && HttpContextAccessor.HttpContext.Session.GetInt32("ChefId") == null)
            {
                
                <a asp-controller="LoginAndRegister" asp-action="Login" class="book-a-table-btn scrollto d-none d-lg-flex">LOGIN</a>
                <a asp-controller="LoginAndRegister" asp-action="Index" class="book-a-table-btn scrollto d-none d-lg-flex">REGISTER</a>
            }
            
            @if (HttpContextAccessor.HttpContext.Session.GetInt32("CustomerId") != null)
            {
            <a asp-controller="LoginAndRegister" asp-action="Logout" class="book-a-table-btn scrollto d-none d-lg-flex">LOGOUT</a> 
            }
            @if (HttpContextAccessor.HttpContext.Session.GetInt32("ChefId") != null)
            {
                <a asp-controller="LoginAndRegister" asp-action="Logout" class="book-a-table-btn scrollto d-none d-lg-flex">LOGOUT</a>
            }
            @if (HttpContextAccessor.HttpContext.Session.GetInt32("ChefId")!= null)
            {
                <a asp-controller="Home" asp-action="ChefProfile" class="book-a-table-btn scrollto d-none d-lg-flex">Profile</a>
            }
            @if (HttpContextAccessor.HttpContext.Session.GetInt32("CustomerId") != null)
            {
                <a asp-controller="Home" asp-action="CustomerProfile" class="book-a-table-btn scrollto d-none d-lg-flex">Profile</a>
            }
            

        </div>
    </header><!-- End Header -->
    
    @RenderBody()
  
