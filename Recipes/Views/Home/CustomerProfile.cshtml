@model UserLogin

@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<section id="hero" class="d-flex align-items-center">
    <div class="container position-relative text-center text-lg-start" data-aos="zoom-in" data-aos-delay="100">
        <div class="row">
<div class="container">
    <form asp-action="EditCustomerProfile" method="post" enctype="multipart/form-data">
        <div class="row gutters">
            <!-- Profile Picture -->
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="account-settings">
                            <div class="user-profile">
                                <div class="user-avatar">
                                    <img src="@Url.Content("~/Images/" + Model.User.ImagePath)" alt="Profile Picture">
                                </div>
                                <h5 class="user-name">@Model.User.Fname </h5>
                                <h5 class="user-name"> @Model.User.Lname</h5>
                                <h6 class="user-email">@Model.User.Email</h6>
                                <h6 class="user-email">@Model.UserName</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Profile Details -->
            <input asp-for="User.Id" type="hidden" />
            <input asp-for="UserId" type="hidden" />
            <input asp-for="Id" type="hidden" />
            <input asp-for="RoleId" type="hidden" />
            <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-primary">Personal Details</h6>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="fullName">Full Name</label>
                                    <input asp-for="User.Fname" class="form-control" id="fullName" placeholder="Enter First name">
                                    <span asp-validation-for="User.Fname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="fullName">Full Name</label>
                                    <input asp-for="User.Lname" class="form-control" id="fullName" placeholder="Enter Last name">
                                    <span asp-validation-for="User.Lname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="eMail">Email</label>
                                    <input asp-for="User.Email" class="form-control" id="eMail" placeholder="Enter email ID">
                                    <span asp-validation-for="User.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="userName">User Name</label>
                                    <input asp-for="UserName" class="form-control" id="userName" placeholder="User Name">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Password">Password</label>
                                    <input asp-for="Password" class="form-control" id="fullName" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- Add other fields similarly -->

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="profilePicture">Profile Picture</label>
                                    <input type="file" asp-for="User.ImageFile" class="form-control-file" id="profilePicture">
                                    <span asp-validation-for="User.ImageFile" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
